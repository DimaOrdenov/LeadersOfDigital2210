<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorizationActivity"
    >
    <ImageView
        android:id="@+id/header_image"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/airplane_over_blue_sky"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitStart"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="@dimen/horizontal_content_padding"
        android:paddingBottom="@dimen/bottom_content_padding">

        <TextView
            android:id="@+id/welcome_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/welcome"
            android:fontFamily="@font/gilroy_light"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/navy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/app_name_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/navy"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome_textview"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/app_description_textview"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.75"
            android:text="@string/app_description"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/waterloo"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/app_name_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/authorize_button"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/authorize"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/social_networks_textview"
            android:background="@drawable/primary_rounded_button_shape"
            android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"/>

        <TextView
            android:id="@+id/social_networks_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/login_via_networks"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/blackRussian"
            app:layout_constraintBottom_toTopOf="@+id/social_networks_gridlayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="32dp"
            />

        <GridLayout
            android:id="@+id/social_networks_gridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/continue_without_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:columnCount="5">

            <ImageButton
                android:layout_marginRight="20dp"
                android:layout_width="@dimen/social_network_button_size"
                android:layout_height="@dimen/social_network_button_size"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_odnoklassniki"/>

            <ImageButton
                android:layout_marginRight="20dp"
                android:layout_width="@dimen/social_network_button_size"
                android:layout_height="@dimen/social_network_button_size"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_sbarbank"/>


            <ImageButton
                android:layout_marginRight="20dp"
                android:layout_width="@dimen/social_network_button_size"
                android:layout_height="@dimen/social_network_button_size"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_vk"/>

            <ImageButton
                android:layout_marginRight="20dp"
                android:layout_width="@dimen/social_network_button_size"
                android:layout_height="@dimen/social_network_button_size"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_telegram"/>

            <ImageButton
                android:layout_width="@dimen/social_network_button_size"
                android:layout_height="@dimen/social_network_button_size"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_yandex"/>

        </GridLayout>

        <TextView
            android:id="@+id/continue_without_login"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/continue_without_login"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/navy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>