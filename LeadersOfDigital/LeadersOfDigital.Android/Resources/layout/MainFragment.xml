<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingBottom="44dp"
    android:paddingTop="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView android:src="@drawable/profile_image"
                android:scaleType="fitCenter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/user_name"
                    android:fontFamily="@font/gilroy_bold"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/user_status"
                    android:fontFamily="@font/gilroy_medium"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/no_trips_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start_planning_button"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView android:src="@drawable/ic_smiling_face_with_halo"
            android:scaleType="fitCenter"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/no_trips"
            android:fontFamily="@font/gilroy_light"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/colorText"/>

    </LinearLayout>

    <Button
        android:id="@+id/start_planning_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/start_planning"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/ripple_rounded_primary"
        android:drawableRight="@drawable/ic_baseline_east_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>