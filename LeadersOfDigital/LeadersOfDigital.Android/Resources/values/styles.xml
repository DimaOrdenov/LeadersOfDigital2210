<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorForeground">@color/colorSeparator</item>
        <item name="android:trackTint">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ripple_rounded_primary</item>
    </style>

</resources>